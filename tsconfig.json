{
  "include": ["./src/**/*", "./test/**/*"],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "paths": {
      "*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false
  },
  "compileOnSave": true,
}
